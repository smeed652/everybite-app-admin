{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "cypress", "vitest/globals"],
    "lib": ["ES2022", "DOM" ]
  },
  "include": ["src", "api", "cypress", "__tests__", "vite.config.ts", "cypress.config.ts"]
}
