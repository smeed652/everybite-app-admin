{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src", "api", "vite.config.ts", "cypress.config.ts"]
}
